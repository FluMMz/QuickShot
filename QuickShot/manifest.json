{
  "manifest_version": 3,
  "name": "QuickShot - Screenshot & Upload",
  "version": "1.1",
  "description": "Mache Screenshots mit Hotkey, lade sie automatisch hoch und kopiere den Link in die Zwischenablage",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.imgur.com/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickShot Einstellungen"
  },
  
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Screenshot aufnehmen und hochladen"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}